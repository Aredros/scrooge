        <%- include('includes/header.ejs') %>

    </head>

    <body style="background-color: snow;">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Reminders</li>
            </ol>
        </nav>

        <div style="text-align: right; padding-right: 20px;">
            <a href="/admin/logout"><button type="button" class="btn btn-dark">Logout</button></a>
        </div>

        <h1 style="padding: 10px 40px;">Reminders</h1>

        <% if (messages.info) { %>
            <div class="container" style="text-align: center;">
                <div class="alert alert-primary" role="alert">
                    <%= messages.info %>
                </div>
            </div>    
        <% } %>

        <div style="width: 93%; text-align: right;">
            <a href="/admin/reminder/create"><button type="button" class="btn btn-success">Create</button></a>
        </div>

        <div style="margin: auto; width:90%; padding: 25px;">
            <table class="table table-bordered" id="reminders">
                <thead>
                    <tr>
                        <th>Stock Symbol #</th>
                        <th>Reminder</th>
                        <th>Due Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% reminders.forEach(reminder => { %>
                        <tr>
                            <td><%= reminder.symbol %></td>
                            <td><%= reminder.reminder %></td>
                            <td><%= reminder.dueDate %></td>
                            <td>
                                <a href="/admin/reminder/<%= reminder.symbol %>/update"><button type="button" class="btn btn-light">Update</button></a>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm-delete" data-symbol="<%= reminder.symbol %>">Delete</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>Delete Reminder</h4>
                        </div>
                        <div class="modal-body">
                            <p id="body-text">Are you sure you want to delete this reminder: </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                            <a class="btn btn-danger btn-ok" style="color: white;">Delete</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <script src="/js/admin/reminders.js"></script>
        
    </body>

</html>